    sunkenchest=false,
    enchant=false,
    rl_parts=false,
    seralaser=false,
    rmvfish=false,
    rodspam=false
}
local cd={
    cast=true,
    catch=true,
    appraise=true,
    luck=true,
    sell=true,
    anglerQ1=true,
    anglerQ2=true,
    evf=true,
    click=true,
    spamsundial=true,
    webhook=true,
    rodspam=true
}

----------------------------------------------------------------
-- WEBHOOK OPTIONS (ditambah baik)
