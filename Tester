    ["Bait Crate"]={v=false,a=1},
    ["Quality Bait Crate"]={v=false,a=1},
    ["Coral Geode"]={v=false,a=1}
}

-- Totems
local totems={
    ["Sundial Totem"]={use=false,during="Day",buyAmount=1,db=false},
    ["Aurora Totem"]={use=false,buyAmount=1,db=false}
}

-- Events
local events={
    {"Shark Hunt",0,false},
