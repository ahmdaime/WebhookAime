local webhookOpt={
    enabled=false,   -- Enable/disable Webhook
    test=false,      -- Ujian manual
    url="",          -- URL webhook
    notifyEvery=20,  -- Setiap berapa tangkapan total
    sendImg=false,   -- Hantar gambar?
    imgEvery=20      -- Hantar gambar setiap X tangkapan
}

-- Rates untuk pengiraan coins / xp per jam
local rates={ money=0, xp=0 }

-- Pelbagai nilai
local vals={
    tpws=5,
    anchor=nil,
    acspeed=.1,
    catch=0,
    perfect=100,
    money=pstat.coins.Value,
    xp=pstat.xp.Value,
    enchant="none",
    crateType="",
    crateAmnt=1,
    totemType="",
    totemAmnt=1,
    pRod=""
}

-- Pembelian items
